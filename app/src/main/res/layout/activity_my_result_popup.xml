<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my_result_popupActivity"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Wpisz pomiary " />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_unit_cm_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_unit_cm_4"
        android:layout_below="@+id/tv_unit_cm_4"
        android:text="cm"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tv_unit_cm_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_unit_cm_3"
        android:layout_below="@+id/tv_unit_cm_3"
        android:text="cm"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tv_unit_cm_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_arm2"
        android:layout_toEndOf="@+id/et_arm2"
        android:text="cm"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tv_unit_cm_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_unit_cm_"
        android:layout_below="@+id/tv_unit_cm_5"
        android:text="cm"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tv_unit_cm_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_forearm2"
        android:layout_alignStart="@+id/tv_unit_cm_"
        android:text="cm"
        android:textSize="29dp" />

    <TextView
        android:id="@+id/tv_unit_cm_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_unit_cm_"
        android:layout_below="@+id/tv_unit_cm_2"
        android:text="cm"
        android:textSize="29dp" />

    <EditText
        android:id="@+id/et_arm2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_thigh2"
        android:layout_alignStart="@+id/et_thigh2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_forearm2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_chest2"
        android:layout_alignStart="@+id/et_arm2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_chest2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:layout_toStartOf="@+id/tv_unit_cm_"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_waist2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_unit_cm_4"
        android:layout_toStartOf="@+id/tv_unit_cm_3"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_thigh2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_calf"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="106dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/et_calf"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_above="@+id/et_forearm2"
        android:layout_alignStart="@+id/et_arm2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/tv_chest"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/tv_thigh"
        android:layout_below="@+id/tv_unit_cm_2"
        android:text="klatka"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_thigh"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_unit_cm_"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="30dp"
        android:text="udo"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b_add_results2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130dp"
        android:text="Dodaj" />

    <TextView
        android:id="@+id/tv_calf"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_unit_cm_"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="30dp"
        android:text="łydka"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_waist2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_unit_cm_4"
        android:layout_alignStart="@+id/tv_chest"
        android:text="pas"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_forearm2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_unit_cm_2"
        android:layout_marginEnd="140dp"
        android:layout_marginStart="30dp"
        android:text="przedramię"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/tv_arm2"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_unit_cm_"
        android:layout_alignStart="@+id/tv_chest"
        android:text="ramię"
        android:textSize="25dp" />
</RelativeLayout>
