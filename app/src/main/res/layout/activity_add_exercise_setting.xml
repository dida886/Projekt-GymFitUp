<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dmain.gymfit.add_exercise_setting">
    <android.support.design.widget.AppBarLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Dodaj rodzaj ćwiczenia" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/etAddExercise"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:layout_toEndOf="@+id/tv_image1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nazwa" />

        <Button
            android:id="@+id/btn_color"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/etAddExercise"
            android:layout_marginEnd="20dp"
            android:text="Kolor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etAddExercise"
        android:layout_marginTop="65dp"
        android:text="Personalizacja" />


    <TextView
        android:id="@+id/result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tv_image1"
        android:layout_marginStart="30dp"
        android:text="Cwiczenie"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_color"
        android:layout_alignTop="@+id/tv_image2"
        android:text="Godzina"
        android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tv_reps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_weight"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/tv_image3"
            android:gravity="center"
            android:text="Ilość "
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_image1"
        android:layout_toEndOf="@+id/tv_image2"
        android:gravity="center"
        android:text="Waga:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/tv_image1"
        android:layout_width="10dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="97dp"
        app:srcCompat="@color/red" />

        <ImageView
            android:id="@+id/tv_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/tv_image1"
            android:layout_alignStart="@+id/result_date"
            app:srcCompat="@drawable/weight" />

    <ImageView
        android:id="@+id/tv_image3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tv_weight"
        android:layout_alignStart="@+id/button4"
        app:srcCompat="@drawable/hantle" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="248dp"
        android:text="Dodaj" />

    <ListView
        android:id="@+id/exercise_list_seting"
        android:layout_width="match_parent"
        android:layout_height="251dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:isScrollContainer="false" />

</RelativeLayout>






