<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Data"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/result_image1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/bmi" />

    <TextView
        android:id="@+id/result_klatka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_image1"
        android:layout_toEndOf="@+id/result_image5"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_pas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/result_image1"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_przedramie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_image1"
        android:layout_marginStart="-90dp"
        android:layout_toEndOf="@+id/result_image3"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_udo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/result_przedramie"
        android:layout_alignTop="@+id/result_ramie"
        android:text="0.0"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/result_ramie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/result_image5"
        android:layout_toEndOf="@+id/result_image1"
        android:text="0.0"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/result_image6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/result_image1"
        android:layout_marginEnd="90dp"
        android:layout_toStartOf="@+id/result_przedramie"
        app:srcCompat="@drawable/bmi" />

    <ImageView
        android:id="@+id/result_image5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/result_image2"
        android:layout_below="@+id/result_image1"
        app:srcCompat="@drawable/bmi" />

    <ImageView
        android:id="@+id/result_image4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/result_image1"
        android:layout_below="@+id/result_image2"
        app:srcCompat="@drawable/bmi" />

    <ImageView
        android:id="@+id/result_image2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/result_image1"
        android:layout_marginStart="150dp"
        app:srcCompat="@drawable/bmi" />

    <ImageView
        android:id="@+id/result_image3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/result_image1"
        android:layout_marginEnd="90dp"
        app:srcCompat="@drawable/bmi" />

    <TextView
        android:id="@+id/result_lydka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/result_klatka"
        android:layout_alignTop="@+id/result_ramie"
        android:text="0.0"
        android:textSize="18sp" />

</RelativeLayout>